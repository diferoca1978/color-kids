---
import "../styles/global.css";
import Footer from "@/components/shared/Footer.astro";
import Navbar from "@/components/shared/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-COL" class="scrollbar-hide lenis lenis-smooth overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script type="module">
      import "/src/scripts/lenisSmooth.js";
    </script>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body class="w-full p-0 m-0 overflow-x-hidden">
    <Navbar />
    <main
      class="w-full mx-auto pt-[168px] md:pt-[168px] min-h-[calc(100vh-168px)]"
    >
      <div class="relative">
        <div class="absolute inset-0 z-0">
          <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <pattern
                id="circles"
                x="0"
                y="0"
                width="40"
                height="40"
                patternUnits="userSpaceOnUse"
              >
                <circle cx="20" cy="20" r="3" fill="#f1f5f9"></circle>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#circles)"></rect>
          </svg>
        </div>
        <div class="relative z-10">
          <slot />
        </div>
      </div>
    </main>
    <Footer />
    <style>
      /* CSS rules for the page scrollbar */
      .scrollbar-hide::-webkit-scrollbar {
        display: none;
      }

      .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
    </style>
  </body>
</html>

---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
    author: CollectionEntry<"author">;
}

const { author } = Astro.props;

const { data, id } = author;

const { name, subtitle, avatar } = data;
---

<!-- Pending to generate static endpoints to the authors  -->
<div class="flex items-center gap-4">
    <Image
        src={avatar}
        alt={name}
        class="size-32 rounded-xl hover:scale-110 transition-all duration-500"
    />
    <div class="flex flex-col gap-2">
        <div class="flex items-center gap-2">
            <span class="text-2xl font-semibold font-manrope">{name}</span>
            <a href={data.instagram}>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    ><rect width="24" height="24" fill="none"></rect><path
                        fill="currentColor"
                        d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4zm9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8A1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5a5 5 0 0 1-5 5a5 5 0 0 1-5-5a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3"
                    ></path></svg
                >
            </a>
        </div>
        <p class="font-manrope text-slate-600">{subtitle}</p>

        <div class="underline-offset-2 hover:underline">
            <a href={`/author/${id}`}
                >Conoce a: <span class="font-manrope font-semibold">{name}</span
                ></a
            >
        </div>
    </div>
</div>

---
import { Image } from "astro:assets";

import logo from "../../assets/Images/logo-512x512.png";
---

<section class="w-full border border-t-2 border-slate-100">
  <footer class="w-full mx-auto md:w-10/12">
    <div class="block space-y-5 p-5 lg:flex lg:justify-between lg:p-5">
      <!-- Logo-mision -->
      <div class="flex flex-col items-center px-4 lg:px-0 lg:block">
        <a href="/">
          <Image src={logo} alt="logo" class="w-36 h-36" />
        </a>
        <p class="font-manrope text-center md:text-start">
          Centro de Estimulación Infantil
        </p>
        <!-- Divider -->
        <span class="flex">
          <span class="h-px flex-1 bg-slate-200 lg:hidden"></span>
        </span>
      </div>

      <!-- Main-menu -->
      <div class="text-center">
        <!-- Divider -->
        <span class="flex mb-5 lg:mb-0">
          <span class="h-px flex-1 bg-slate-200 lg:hidden"></span>
        </span>
        <h1 class="mb-3">Menu</h1>

        <div
          class="flex flex-col space-y-2.5 items-center text-center md:space-y-2"
        >
          <a id="link" href="/" class="text-gray-700">Inicio</a>
          <a id="link" href="/nosotros" class="text-gray-700">Nosotros</a>
          <a id="link" href="/servicios" class="text-gray-700">Servicios</a>
          <a id="link" href="/contacto" class="text-gray-700">Contacto</a>
          <a id="link" href="/blog" class="text-gray-700">Blog</a>
        </div>
        <!-- Divider -->
        <span class="flex mt-5">
          <span class="h-px flex-1 bg-slate-200 lg:hidden"></span>
        </span>
      </div>

      <!-- Contact -->
      <div class="text-center space-y-2 mb-5">
        <h1 class="mb-5">Contacto</h1>
        <div class="flex justify-center">
          <svg
            class="mr-2"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><rect width="24" height="24" fill="none"></rect><path
              fill="currentColor"
              d="M12 11.5A2.5 2.5 0 0 1 9.5 9A2.5 2.5 0 0 1 12 6.5A2.5 2.5 0 0 1 14.5 9a2.5 2.5 0 0 1-2.5 2.5M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7"
            ></path></svg
          >
          <p class="font-manrope">Cra. 51 # 96-27,Bogotá</p>
        </div>
        <div class="flex justify-center">
          <svg
            class="mr-2"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><rect width="24" height="24" fill="none"></rect><path
              fill="currentColor"
              d="M6.62 10.79c1.44 2.83 3.76 5.15 6.59 6.59l2.2-2.2c.28-.28.67-.36 1.02-.25c1.12.37 2.32.57 3.57.57a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1A17 17 0 0 1 3 4a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1c0 1.25.2 2.45.57 3.57c.11.35.03.74-.25 1.02z"
            ></path></svg
          >
          <p class="font-manrope">4003002000</p>
        </div>
        <div class="flex justify-center">
          <svg
            class="mr-2"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><rect width="24" height="24" fill="none"></rect><path
              fill="currentColor"
              d="m20 8l-8 5l-8-5V6l8 5l8-5m0-2H4c-1.11 0-2 .89-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2"
            ></path></svg
          >
          <p class="font-manrope">dianaguerrero@email.com</p>
        </div>
        <span class="flex mt-5">
          <span class="h-px flex-1 bg-slate-200 lg:hidden"></span>
        </span>
      </div>
      <!-- Social -->
      <div class="text-center">
        <h1 class="mb-5">Síguenos</h1>
        <div class="flex justify-around items-center">
          <a href="https://www.instagram.com/dianaguerrero_to/">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              ><rect width="24" height="24" fill="none"></rect><path
                fill="currentColor"
                d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4zm9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8A1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5a5 5 0 0 1-5 5a5 5 0 0 1-5-5a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3"
              ></path></svg
            >

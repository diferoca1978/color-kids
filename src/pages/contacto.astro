---
import { Image } from "astro:assets";
import ContactBanner from "@/components/ui/ContactBanner.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import ContactForm from "@/components/ui/form/contactForm.astro";
import Mail from "@/assets/Images/Mail.png";
import Sent from "@/assets/Images/Sent.png";
import Gps from "@/assets/Images/Gps.png";
import Contact from "@/assets/Images/Contact.png";
---

<MainLayout title="Contacto - Color Kids">
  <div class="space-y-20 mb-24 relative">
    <div class="absolute inset-0 z-0">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="circles"
            x="0"
            y="0"
            width="40"
            height="40"
            patternUnits="userSpaceOnUse"
          >
            <circle cx="20" cy="20" r="3" fill="#f1f5f9"></circle>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#circles)"></rect>
      </svg>
    </div>
    <div class="max-w-7xl mx-auto relative z-10">
      <h1
        class="mb-12 tracking-tight text-4xl text-slate-900 text-center text-[min(10vw,60px)] font-bold sm:text-start title"
      >
        Contacto
      </h1>
      <ContactBanner />
    </div>
    <div class="grid md:grid-cols-2 gap-6 max-w-7xl mx-auto relative z-10">
      <ContactForm />
      <Image
        src={Sent}
        alt="Message Sent"
        class="hidden w-1/3 md:flex md:justify-center md:mx-auto md:hover:scale-105 md:transition md:duration-300 md:ease-in-out"
      />
    </div>

    <!-- Contact-info -->
    <div class="max-w-7xl mx-auto grid md:grid-cols-3 gap-6 relative z-10">
      <div class="flex flex-col items-center space-y-2">
        <Image
          src={Gps}
          alt="Gps"
          class="w-1/2 flex justify-center mx-auto hover:scale-105 transition duration-300 ease-in-out"
        />
        <h1>Dirección</h1>
        <p>Cra. 51 # 96-27, Bogotá</p>
      </div>
      <div class="flex flex-col items-center space-y-2">
        <Image
          src={Contact}
          alt="Phone"
          class="w-1/2 flex justify-center mx-auto hover:scale-105 transition duration-300 ease-in-out"
        />
        <h1>Telefono</h1>
        <div class="flex items-center space-x-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><rect width="24" height="24" fill="none"></rect><path
              fill="currentColor"
              d="M16.6 14c-.2-.1-1.5-.7-1.7-.8s-.4-.1-.6.1s-.6.8-.8 1c-.1.2-.3.2-.5.1c-.7-.3-1.4-.7-2-1.2c-.5-.5-1-1.1-1.4-1.7c-.1-.2 0-.4.1-.5s.2-.3.4-.4c.1-.1.2-.3.2-.4c.1-.1.1-.3 0-.4S9.7 8.5 9.5 8c-.1-.7-.3-.7-.5-.7h-.5c-.2 0-.5.2-.6.3Q7 8.5 7 9.7c.1.9.4 1.8 1 2.6c1.1 1.6 2.5 2.9 4.2 3.7c.5.2.9.4 1.4.5c.5.2 1 .2 1.6.1c.7-.1 1.3-.6 1.7-1.2c.2-.4.2-.8.1-1.2zm2.5-9.1C15.2 1 8.9 1 5 4.9c-3.2 3.2-3.8 8.1-1.6 12L2 22l5.3-1.4c1.5.8 3.1 1.2 4.7 1.2c5.5 0 9.9-4.4 9.9-9.9c.1-2.6-1-5.1-2.8-7m-2.7 14c-1.3.8-2.8 1.3-4.4 1.3c-1.5 0-2.9-.4-4.2-1.1l-.3-.2l-3.1.8l.8-3l-.2-.3c-2.4-4-1.2-9 2.7-11.5S16.6 3.7 19 7.5c2.4 3.9 1.3 9-2.6 11.4"
            ></path></svg
          >
          <p>+ 57 351 2345678</p>
        </div>
      </div>
      <div class="flex flex-col items-center space-y-2">
        <Image
          src={Mail}
          alt="Mail"
          class="w-1/2 flex justify-center mx-auto hover:scale-105 transition duration-300 ease-in-out"
        />
        <h1>correo</h1>
        <p>contacto@colorkids.com</p>
      </div>
    </div>
  </div>
</MainLayout>
